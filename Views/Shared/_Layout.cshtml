@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CampusLib</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication2.styles.css" asp-append-version="true" />

    <style>
        /* --- THEME VARIABLES --- */
        :root {
            --bg-charcoal: #121212;
            --glass-panel: rgba(30, 30, 30, 0.75);
            --neon-green: #00ff9d;
            --text-main: #e0e0e0;
            --border-glass: 1px solid rgba(255, 255, 255, 0.1);
        }

        /* --- 1. MAIN BACKGROUND --- */
        body {
            background-color: var(--bg-charcoal);
            background-image: radial-gradient(circle at top right, #1a2e25 0%, transparent 40%);
            color: var(--text-main);
            font-family: 'Segoe UI', sans-serif;
            min-height: 100vh;
        }

        /* --- 2. THE FIXER --- */
        .bg-light, .bg-white {
            background-color: transparent !important;
            color: var(--text-main) !important;
        }

        /* Force dark text classes to be light */
        .text-dark {
            color: var(--text-main) !important;
        }

        .text-muted {
            color: #a0a0a0 !important;
        }

        /* --- 3. GLASS CARDS --- */
        .card, .navbar, .footer, .dropdown-menu, .modal-content {
            background-color: var(--glass-panel) !important;
            backdrop-filter: blur(12px);
            -webkit-backdrop-filter: blur(12px);
            border: var(--border-glass);
            box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.5);
        }

        .card-header {
            background-color: rgba(0, 255, 157, 0.05) !important;
            border-bottom: var(--border-glass);
            color: var(--neon-green) !important;
        }

        .card-body {
            background-color: transparent !important;
        }

        /* --- 4. TYPOGRAPHY --- */
        h1, h2, h3, h4, h5, .navbar-brand {
            color: var(--neon-green) !important;
            text-shadow: 0 0 10px rgba(0, 255, 157, 0.3);
            font-weight: 600;
        }

        a {
            color: var(--neon-green);
            text-decoration: none;
            transition: 0.2s;
        }

            a:hover {
                color: #fff;
                text-shadow: 0 0 8px var(--neon-green);
            }

        /* --- 5. FORMS --- */
        .form-control, .form-select {
            background-color: rgba(0, 0, 0, 0.5) !important;
            border: 1px solid rgba(255,255,255,0.1);
            color: #fff !important;
        }

            .form-control:focus {
                background-color: rgba(0, 0, 0, 0.8) !important;
                border-color: var(--neon-green);
                box-shadow: 0 0 0 0.25rem rgba(0, 255, 157, 0.2);
            }

        /* --- 6. TABLES (FIXED) --- */
        /* Explicitly force all table text to be light */
        .table {
            --bs-table-color: var(--text-main);
            --bs-table-bg: transparent;
            --bs-table-striped-color: var(--text-main);
            border-color: rgba(255,255,255,0.1);
            color: var(--text-main) !important;
        }

            /* Direct hit on all cells to override specificity issues */
            .table td, .table th, .table tr {
                color: var(--text-main) !important;
                background-color: transparent !important;
            }

            /* Specific header style */
            .table thead th {
                border-bottom: 2px solid var(--neon-green);
                color: var(--neon-green) !important;
                font-weight: bold;
            }

        /* Hover Effect */
        .table-hover tbody tr:hover td {
            color: #fff !important;
            background-color: rgba(0, 255, 157, 0.1) !important;
        }

        .font-monospace {
            color: #aaa !important;
        }

        /* --- 7. BUTTONS --- */
        .btn-primary {
            background-color: var(--neon-green);
            color: #000;
            border: none;
            font-weight: bold;
        }

            .btn-primary:hover {
                background-color: #fff;
                box-shadow: 0 0 15px var(--neon-green);
                color: #000;
            }

        .btn-outline-secondary {
            border-color: rgba(255,255,255,0.3);
            color: #ccc;
        }

            .btn-outline-secondary:hover {
                background-color: rgba(255,255,255,0.1);
                color: #fff;
            }

        .dropdown-item {
            color: var(--text-main);
        }

            .dropdown-item:hover {
                background-color: rgba(0, 255, 157, 0.2);
                color: #fff;
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark mb-4">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-cpu-fill me-2"></i>CampusLib
                </a>
                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Books" asp-action="Index">Books</a>
                        </li>
                        @if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Admin Panel
                                </a>
                                <ul class="dropdown-menu border-0" aria-labelledby="adminDropdown">
                                    <li><a class="dropdown-item" asp-controller="Loans" asp-action="Index"><i class="bi bi-arrow-left-right me-2"></i>Manage Loans</a></li>
                                    <li><a class="dropdown-item" asp-controller="Users" asp-action="Index"><i class="bi bi-people me-2"></i>Manage Users</a></li>
                                </ul>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer mt-auto py-3">
        <div class="container text-center text-muted">
            &copy; 2026 - CampusLib - Amine Khazroun
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>