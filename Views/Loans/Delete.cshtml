@model WebApplication2.Models.Loan

@{
    ViewData["Title"] = "Delete Loan";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-8 col-lg-6">
        <div class="card border-danger shadow">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0"><i class="bi bi-exclamation-triangle-fill me-2"></i>Delete Confirmation</h4>
            </div>
            <div class="card-body text-center">
                <h5 class="card-title mt-3">Are you sure you want to delete this record?</h5>
                <p class="text-muted">This action cannot be undone.</p>

                <hr />

                <div class="text-start px-4 py-3 bg-light rounded">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-secondary">Book Title</dt>
                        <dd class="col-sm-8 fw-bold">@Html.DisplayFor(model => model.Book.Title)</dd>

                        <dt class="col-sm-4 text-secondary">Member Email</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.User.Email)</dd>

                        <dt class="col-sm-4 text-secondary">Loan Date</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.LoanDate)</dd>

                        <dt class="col-sm-4 text-secondary">Return Date</dt>
                        <dd class="col-sm-8">
                            @if (Model.ReturnDate != null)
                            {
                                @Html.DisplayFor(model => model.ReturnDate)
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark">Not Returned</span>
                            }
                        </dd>
                    </dl>
                </div>

                <form asp-action="Delete" class="mt-4">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger btn-lg shadow-sm px-4">
                        <i class="bi bi-trash-fill me-2"></i>Delete Record
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4 ms-2">
                        Cancel
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>