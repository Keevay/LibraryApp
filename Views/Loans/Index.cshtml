@model IEnumerable<WebApplication2.Models.Loan>

@{
    ViewData["Title"] = "Loan Management";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-0 fw-bold text-white">
            <i class="bi bi-journal-album me-2"></i>Loan Records
        </h2>
        <p class="text-muted">Track borrowed books and returns.</p>
    </div>
    <a asp-action="Create" class="btn btn-primary shadow-sm">
        <i class="bi bi-plus-circle me-2"></i>New Loan
    </a>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body p-0">
        <table class="table table-hover align-middle mb-0">
            <thead class="bg-light">
                <tr>
                    <th class="ps-4">@Html.DisplayNameFor(model => model.Book)</th>
                    <th>@Html.DisplayNameFor(model => model.User)</th>
                    <th>Loan Start</th>
                    <th>Status / Return Date</th>
                    <th class="text-end pe-4">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="ps-4 fw-bold text-dark">
                            <i class="bi bi-book me-2 text-secondary"></i>@Html.DisplayFor(modelItem => item.Book.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.User.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LoanDate)
                        </td>
                        <td>
                            @if (item.ReturnDate == null)
                            {
                                <span class="badge bg-warning text-dark border border-warning">
                                    <i class="bi bi-clock-history me-1"></i> Active
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-light text-secondary border">
                                    <i class="bi bi-check-circle me-1"></i> @Html.DisplayFor(modelItem => item.ReturnDate)
                                </span>
                            }
                        </td>
                        <td class="text-end pe-4">
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="Edit Loan">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Delete Record">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>