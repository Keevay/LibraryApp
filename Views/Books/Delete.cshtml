@model WebApplication2.Models.Book

@{
    ViewData["Title"] = "Delete Book";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-8 col-lg-6">
        <div class="card border-danger shadow">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0"><i class="bi bi-exclamation-triangle-fill me-2"></i>Delete Book</h4>
            </div>
            <div class="card-body text-center">
                <h5 class="card-title mt-3">Are you sure you want to remove this book?</h5>
                <p class="text-muted">This action is permanent and cannot be undone.</p>

                <hr />

                <div class="text-start px-4 py-3 bg-light rounded">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-secondary">Title</dt>
                        <dd class="col-sm-8 fw-bold">@Html.DisplayFor(model => model.Title)</dd>

                        <dt class="col-sm-4 text-secondary">Author</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Author)</dd>

                        <dt class="col-sm-4 text-secondary">ISBN</dt>
                        <dd class="col-sm-8 font-monospace">@Html.DisplayFor(model => model.ISBN)</dd>

                        <dt class="col-sm-4 text-secondary">Status</dt>
                        <dd class="col-sm-8">
                            @if (Model.IsAvailable)
                            {
                                <span class="badge bg-success">Available</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Checked Out</span>
                            }
                        </dd>
                    </dl>
                </div>

                <form asp-action="Delete" class="mt-4">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger btn-lg shadow-sm px-4">
                        <i class="bi bi-trash-fill me-2"></i>Confirm Delete
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4 ms-2">
                        Cancel
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>