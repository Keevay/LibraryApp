@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService
@model IEnumerable<WebApplication2.Models.Book>

@{
    ViewData["Title"] = "Library Books";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-0 fw-bold text-white">
            <i class="bi bi-book-half me-2"></i>Library Catalog
        </h2>
        <p class="text-muted">Browse and manage the collection of books.</p>
    </div>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Create" class="btn btn-primary shadow-sm">
            <i class="bi bi-plus-lg"></i> Add New Book
        </a>
    }
</div>

<div class="card shadow-sm border-0">
    <div class="card-body p-0">
        <table class="table table-hover align-middle mb-0">
            <thead class="bg-light">
                <tr>
                    <th class="ps-4">@Html.DisplayNameFor(model => model.Title)</th>
                    <th>@Html.DisplayNameFor(model => model.Author)</th>
                    <th>@Html.DisplayNameFor(model => model.ISBN)</th>
                    <th class="text-center">Status</th>
                    @if (User.IsInRole("Admin"))
                    {
                        <th class="text-end pe-4">Actions</th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="ps-4 fw-bold text-dark">
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Author)
                        </td>
                        <td>
                            <span class="font-monospace text-muted">@Html.DisplayFor(modelItem => item.ISBN)</span>
                        </td>
                        <td class="text-center">
                            @if (item.IsAvailable)
                            {
                                <span class="badge bg-success rounded-pill">Available</span>
                            }
                            else
                            {
                                <span class="badge bg-danger rounded-pill">On Loan</span>
                            }
                        </td>
                        @if (User.IsInRole("Admin"))
                        {
                            <td class="text-end pe-4">
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="Edit">
                                    <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Delete">
                                        <i class="bi bi-trash"></i>
                                    </a>

                                </div>
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>