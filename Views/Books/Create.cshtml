@model WebApplication2.Models.Book

@{
    ViewData["Title"] = "Add Book";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow border-0 mt-4">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0"><i class="bi bi-book-fill me-2"></i>Add New Book</h4>
            </div>
            <div class="card-body bg-light">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="form-group mb-3">
                        <label asp-for="Title" class="form-label fw-bold">Book Title</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-type-h1"></i></span>
                            <input asp-for="Title" class="form-control" placeholder="Enter book title" />
                        </div>
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Author" class="form-label fw-bold">Author</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-person-fill"></i></span>
                            <input asp-for="Author" class="form-control" placeholder="Author name" />
                        </div>
                        <span asp-validation-for="Author" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="ISBN" class="form-label fw-bold">ISBN</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-upc-scan"></i></span>
                            <input asp-for="ISBN" class="form-control font-monospace" placeholder="ISBN Number" />
                        </div>
                        <span asp-validation-for="ISBN" class="text-danger"></span>
                    </div>

                    <div class="form-check form-switch mb-4 ms-2">
                        <input class="form-check-input" type="checkbox" asp-for="IsAvailable" checked>
                        <label class="form-check-label fw-bold" asp-for="IsAvailable">
                            Make this book available immediately?
                        </label>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg shadow-sm">
                            <i class="bi bi-plus-lg me-2"></i>Add Book
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            Back to Catalog
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}